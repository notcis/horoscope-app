generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String?
  picture    String?
  email      String?   @unique
  password   String?
  dob        DateTime?
  role       String    @default("user")
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  Account    Account[]
}

model Account {
  id                String @id @default(uuid())
  userId            String
  provider          String
  providerAccountId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Horoscope {
  id               String   @id @default(uuid())
  userId           String
  monthKey         String
  dob              String
  age              String
  zodiac           String
  monthYear        String
  love             String
  career           String
  finance          String
  luckyColorNameTH String
  luckyColorHex    String
  luckyNumber      String
  createdAt        DateTime @default(now())

  @@unique([userId, monthKey], name: "user_month_key_unique")
}
